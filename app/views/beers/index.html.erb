<h1>Listing beers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Style</th>
    <th>Brewery</th>
    <th>Abv</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= beer.name %></td>
    <td><%= beer.style %></td>
    <td><%= beer.brewery_id %></td>
    <td><%= beer.abv %></td>
    <td><%= link_to 'Show', beer %></td>
    <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
    <td><%= link_to 'Destroy', beer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

